<?xml version="1.0" ?>
<LocalConfiguration>
	
	<DataSource>
		<!-- Contains a list of all available connections (at least one is required) -->
		<Connections>
			
			<default>
				<Driver>YageCMS\Core\DatabaseInterface\Drivers\MySQL</Driver>
				<Server>localhost</Server>
				<Database>webshop</Database>
				<Username>root</Username>
				<Password></Password>
				<Prefix></Prefix>
			</default>
			
		</Connections>
		
		<!-- This parameter needs to match the name of one of the above connections -->
		<UseConnection>default</UseConnection>
	</DataSource>
	
	<CookiePrefix>website_</CookiePrefix>
	<Log>
		<default><AutoWrite>NO</AutoWrite></default>
	</Log>
</LocalConfiguration>